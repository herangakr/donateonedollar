        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">DonateOneDollar</a>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item">
              <%= link_to 'Home', root_path, class: 'nav-link' %> 
            </li>
            <li class="nav-item">
              <%= link_to 'Who Are We','#', class: 'nav-link' %> 
            </li>
            <li class="nav-item">
              <%= link_to 'Gallery','#', class: 'nav-link' %> 
            </li>
            <li class="nav-item">
              <%= link_to 'Donate Now','#', class: 'nav-link' %> 
            </li>
            <li class="nav-item">
              <%= link_to 'Our Campaigns','#', class: 'nav-link' %> 
            </li>
            <li class="nav-item">
              <%= link_to 'Contact Us','#', class: 'nav-link' %> 
            </li>
          </ul>
        </div>
      </nav>

    <%= yield %>
