<div class="top-box">
  <br />
  <br />
  <br />
  <br />
  <br />
  <br />
  <div class="frosty col-10 offset-1 text-center">
    <h1><%= @campaign.title %></h1>
  </div>
</div>
<div class="pict img-fluid ">
<%= image_tag @campaign.picture.url %>
</div>
<div>
  <h4><strong><span class="badge badge-danger">Goal:</span></strong></h4><strong><%= @campaign.goal %></strong>
  <h4><strong><span class="badge badge-success">Raised:</span></strong></h4><strong><%= @campaign.raised %></strong>
  
</div>

<div class="progress">
  <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
</div>

<div class="booyah-box text-center">
  <h2><b><%= @campaign.description_short %></b></h2>
  <br />
  <p><%= @campaign.description_full %></p>
</div>
<div class="col-10 offset-1 text-center">
    <%= link_to 'DONATE NOW', new_donate_path, class: 'btn btn-primary btn-lg btn-block' %>
  </div>
